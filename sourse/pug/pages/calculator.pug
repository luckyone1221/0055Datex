extends layout/main.pug

include ../blocks/sContent/_sContent.pug
include ../blocks/sContact/_sContact.pug
include ../blocks/sOpportunities/_sOpportunities.pug
include ../blocks/sVersions/_sVersions.pug
include ../blocks/sApp/_sApp.pug
include ../blocks/sAdvantage/_sAdvantage.pug
include ../blocks/sDemonstration/_sDemonstration.pug
include ../blocks/sClients/_sClients.pug
include ../blocks/sQuestions/_sQuestions.pug
include ../blocks/sHeaderAlt/_sHeaderAlt.pug
include ../blocks/sCalculator/_sCalculator.pug
include ../blocks/cModal/_cModal.pug
include ../blocks/sNeedCard/_sNeedCard.pug
include ../blocks/sAddService/_sAddService.pug
include ../blocks/sPresent/_sPresent.pug
include ../blocks/sResult/_sResult.pug
include ../blocks/sConnects/_sConnects.pug

block variables
	- let  mainPage='new-page fixed2'
	- let  bg= '09-576.png'

block title
	- let  title= 'calculator'
	title= title
block pagecontent
	+sHeaderAlt()
	+sCalculator()
	+cModal({
		pbWidth: 1/7,
		modalId: 'cModalstep1',
		addClasses: '',
	})
		+e.container.container
			+e.back-btn-cont.back-btn-cont-js.row.align-items-center
				.col
					+e.back-btn.close-cModal-js
						+e.b-icon
							img(loading="lazy" src='img/svg/chevron-left.svg' alt="")
						span Назад
			+e.content
				+b.section-title.text-center
					h2 Основной программный продукт, для которого требуется ИТС
				+e.input-box.cModal-inp-box-js
					+e.input-wrap
						+e.INPUT.input.form-control.cModal-inp-js(type="text" name="search" placeholder='Введите название продукта' data-placeholder-down-md='Введите название продукта' data-placeholder-up-md='Введите название продукта или выберите из списка ниже' autocomplete="off")
						+e.search-btn(type="button")
							+icon('zoom')
					+e.options
						+cModalSearchOption('1С:Бухгалтерия')
						+cModalSearchOption('1С:Управление нашей фирмой')
						+cModalSearchOption('1С:Комплексная автоматизация')
				+e.cards-row.row
					+cModalCard(1, '1С:Управление торговлей')
					+cModalCard(2, '1С:Бухгалтерия')
					+cModalCard(3, '1С:Управление нашей фирмой')
					+cModalCard(4, '1С:Комплексная автоматизация')
					+cModalCard(5, '1С:Зарплата и управление персоналом')
				.text-center
					+e.btn.open-next-cModal-js(href='#') Продолжить
	+cModal({
		pbWidth: 2/7,
		modalId: 'cModalstep2',
		addClasses: '',
	})
		+e.container.container
			+e.back-btn-cont.back-btn-cont-js.row.align-items-center
				.col
					+e.back-btn.close-cModal-js
						+e.b-icon
							img(loading="lazy" src='img/svg/chevron-left.svg' alt="")
						span Назад
				//-.col-auto
					+e.compare-btn(href='#')
						+e.com-icon
							img(loading="lazy" src="img/svg/compare.svg" alt="")
						+e.com-txt Сравнить версии
			+e.content
				+b.section-title.text-center
					h2 Вашему продукту требуется
				+sNeedCard()(class="justify-content-center")
					+sNeedCardItem({
						title: '1С:ИТС Отраслевой 4-й категории',
						descr: 'Подключение ИТС Отраслевой  возможно ТОЛЬКО при наличии договора регулярного сопровождения 1С:ИТС',
						price: '82 200 ₽',
						discount: '-10%',
						oldPrice: '86 400 ₽',
						radioGroup: '1С:ИТС Отраслевой 4-й категории',
						listItems: [
							'Доступ к обновлениям на портале 1С.',
							'Линия консультаций разработчика отраслевых решений, сотрудники которой дадут ответы на вопросы профильного характера.',
							'Доступ к базам знаний для отраслевых решений, которые состоят из наиболее часто задаваемых вопросов и ответов на них по функционалу нестандартных конфигураций 1С.',
						],
					})
						.col-md-auto.col-lg-12
							+e.btn--yellow.open-next-cModal-js.sNeedCard-btn-js(type="button") Добавить
						.col-md-auto.col-lg-12
							+e.btn--gray.open-next-cModal-js(type="button") Пропустить
	+cModal({
		pbWidth: 3/7,
		modalId: 'cModalstep3',
		addClasses: '',
	})
		+e.container.container
			+e.back-btn-cont.back-btn-cont-js.row.align-items-center
				.col
					+e.back-btn.close-cModal-js
						+e.b-icon
							img(loading="lazy" src='img/svg/chevron-left.svg' alt="")
						span Назад
				.col-auto
					+e.compare-btn(href='#')
						+e.com-icon
							img(loading="lazy" src="img/svg/compare.svg" alt="")
						+e.com-txt Сравнить версии
			+e.content
				+b.section-title.text-center
					h2 Выберите тариф 1С:ИТС
				+sNeedCard()
					+sNeedCardItem({
						title: 'ИТС ТЕХНО',
						descr: 'Эффективный способ быстро подобрать тариф 1С:ИТС и дополнительные сервисы для вашего бизнеса',
						price: '17 136 ₽',
						radioGroup: 'ИТС ТЕХНО',
						listItems: [
							'Оперативная поддержка пользователей, оказываемая разработчиками Отраслевых ПП',
							'Обращение на ЛК разработчика Отраслевого ПП любым из перечисленных способов, который наиболее привычен и удобен для пользователя',
							'Усиленный контроль фирмы «1С» за качеством сопровождения Отраслевых ПП',
							'Усиленный контроль фирмы «1С» за качеством сопровождения Отраслевых ПП',
						],
					})
						.col-md-auto.col-lg-12
							+e.btn--yellow.open-next-cModal-js.sNeedCard-btn-js(type="button") Выбрать ИТС ТЕХНО
					+sNeedCardItem({
						title: 'ИТС ПРОФ',
						descr: 'Эффективный способ быстро подобрать тариф 1С:ИТС и дополнительные сервисы для вашего бизнеса',
						price: '33 818 ₽',
						discount: '-10%',
						oldPrice: '39 578 ₽',
						radioGroup: 'ИТС ПРОФ',
						gifts: true,
						listItems: [
							'Оперативная поддержка пользователей, оказываемая разработчиками Отраслевых ПП',
							'Обращение на ЛК разработчика Отраслевого ПП любым из перечисленных способов, который наиболее привычен и удобен для пользователя',
							'Усиленный контроль фирмы «1С» за качеством сопровождения Отраслевых ПП',
							'Усиленный контроль фирмы «1С» за качеством сопровождения Отраслевых ПП',
						],
					})
						.col-md-auto.col-lg-12
							+e.btn--yellow.open-next-cModal-js.sNeedCard-btn-js(type="button") Выбрать ИТС ПРОФ
	+cModal({
		pbWidth: 4/7,
		modalId: 'cModalstep4',
		addClasses: '',
	})
		+e.container.container
			+e.back-btn-cont.back-btn-cont-js.row.align-items-center
				.col
					+e.back-btn.close-cModal-js
						+e.b-icon
							img(loading="lazy" src='img/svg/chevron-left.svg' alt="")
						span Назад
			+e.content
				+b.section-title.text-center
					h2 Добавьте сервисы
					p Представленные ниже сервисы помогут вам усовершенствовать и модернезировать ваши бизнес-процессы
				+sAddService()
	+cModal({
		pbWidth: 5/7,
		modalId: 'cModalstep5',
		addClasses: '',
	})
		+e.container.container
			+e.back-btn-cont.back-btn-cont-js.row.align-items-center
				.col
					+e.back-btn.close-cModal-js
						+e.b-icon
							img(loading="lazy" src='img/svg/chevron-left.svg' alt="")
						span Назад
			+e.content
				+b.section-title.text-center
					h2 Выберите подарок
				+sPresent()
	//-make this
	+cModal({
		pbWidth: 7 / 7,
		modalId: 'cModalstep6',
		addClasses: '',
	})
		+e.container.container
			+e.back-btn-cont.back-btn-cont-js.row.align-items-center
				.col
					+e.back-btn.close-cModal-js
						+e.b-icon
							img(loading="lazy" src='img/svg/chevron-left.svg' alt="")
						span Назад
			+e.content
				+b.section-title.text-center
					h2 Что вам удалось собрать
				+sResult()
	//-
	+cModal({
		pbWidth: 7 / 7,
		modalId: 'cModalstep7',
		addClasses: 'centered',
	})
		+e.container--centerd.container
			+e.back-btn-cont.back-btn-cont-js.row.align-items-center
				.col
					+e.back-btn.close-cModal-js
						+e.b-icon
							img(loading="lazy" src='img/svg/chevron-left.svg' alt="")
						span Назад
			+e.content--center
				+b.section-title.text-center
					h2 Связаться по телефону
				+sConnects({
					tel: true,
				})
	+cModal({
		pbWidth: 7 / 7,
		modalId: 'cModalstep8',
		addClasses: 'centered',
	})
		+e.container--centerd.container
			+e.back-btn-cont.back-btn-cont-js.row.align-items-center
				.col
					+e.back-btn.close-cModal-js
						+e.b-icon
							img(loading="lazy" src='img/svg/chevron-left.svg' alt="")
						span Назад
			+e.content--center
				+b.section-title.text-center
					h2 Связаться по почте
				+sConnects({
					mail: true,
				})
	+cModal({
		pbWidth: 7 / 7,
		modalId: 'cModalstep9',
		addClasses: 'active centered',
	})
		+e.container--centerd.container
			+e.back-btn-cont.back-btn-cont-js.row.align-items-center
				.col
					+e.back-btn.close-cModal-js
						+e.b-icon
							img(loading="lazy" src='img/svg/chevron-left.svg' alt="")
						span Назад
			+e.content--center
				+b.section-title.text-center
					h2 Спасибо за обращение!
				+b.thanks.text-center
					+e.txt Мы свяжемся с Вами в ближайшее время.
					+e.btn--warning.close-cModal-js(type="button") Вернуться в начало

	//-+footer()

mixin cModalSearchOption(txt)
	+e.option=txt

mixin cModalCard(imgNum, txt)
	+e.card-col.col-lg-auto.col-md-4
		+e.c-item(href="#")
			+e.c-img
				img(loading="lazy" src=`img/svg/sCalculatorItem-${imgNum}.svg` alt="")
			+e.c-txt.text-lg-center=txt