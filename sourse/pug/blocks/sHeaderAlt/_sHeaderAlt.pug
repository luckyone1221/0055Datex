mixin sHeaderAlt(data)
	// start sHeaderAlt
	+b.HEADER.sHeaderAlt--js#sHeaderAlt&attributes(attributes)
		.container
			+e.row.row.align-items-center
				.col.col-xl-auto
					+e.logo(href='#')
						img(loading="lazy" src="img/svg/logo.svg" alt="")
				.col.d-none.d-xl-block
					+e.logo-txt Официальный партнер 1С в Самаре
				.col-auto
					+e.soc-row.row
						+socItem('vb')
						+socItem('wa')
						+socItem('tg')
				.col-auto
					+e.tel(href='tel:+78463004840') +7 (846) 300 48 40
					+e.shedule Пн-Пт 9:00 - 18:00
				.col-auto.d-none.d-lg-block
					+e.btn.link-modal-js(href='#modal-call')
						span Перезвоните мне
				.col-auto.d-lg-none
					+e.mob-call(href='tel:+78463004840')
						+icon('tell')
	// end sHeaderAlt